Database:  create database thoughtworks_cafeteria;


Table (for storing employee_details):

    create table employee_details(Serial_no serial,Employee_ID integer primary key,Username varchar(32));

    insert into employee_details(employee_id,username)values(101,'name1'),(102,'name2'),(103,'name3'),(104,'name4'),(105,'name5'),(106,'name6'),(107,'name7'),(108,'name8'),(109,'name9'),(110,'name10');


Table (for vendor login details):

    create table vendor_login(vendor_id integer primary key,password varchar(32));

    insert into vendor_login(vendor_id,password)values(1001,'cold'),(1002,'hot');


Table (for beverages details):

    create table beverage_details(reference_id integer,id integer,name varchar(32),is_available varchar(20),PRIMARY KEY(reference_id,id),FOREIGN KEY(reference_id) REFERENCES vendor_details(vendor_id));


Table (for ordered items):

    create table ordered_items(employee_id integer,item_id integer,item varchar,quantity integer,date DATE DEFAULT CURRENT_DATE,PRIMARY KEY(employee_id,item_id),FOREIGN KEY(employee_id)REFERENCES employee_details(employee_id));



